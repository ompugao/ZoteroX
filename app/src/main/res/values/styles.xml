<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppTheme.Actionbar</item>

<!--        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
<!--        <item name="android:windowShowWallpaper">true</item>-->
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="colorPrimary">#5B6CD8</item>
        <item name="colorPrimaryDark">#ccc</item>
        <item name="colorAccent">#1c48db</item>
        <item name="actionBarTheme">@style/AppTheme.Actionbar</item>
    </style>

    <style name="AppTheme.Actionbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme" />

    <style name="AppTheme.PopupOverlay" parent="AppTheme" />

    <style name="menu_labels_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/fab_actiontext_background</item>
    </style>

    <!--ShapeableImageView åœ† -->
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
