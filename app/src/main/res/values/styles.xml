<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppTheme.Actionbar</item>

<!--        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
<!--        <item name="android:windowShowWallpaper">true</item>-->
<!--        <item name="android:windowIsTranslucent">true</item>-->

    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="colorPrimary">#5B6CD8</item>
        <item name="colorPrimaryDark">#ccc</item>
        <item name="colorAccent">#1c48db</item>
        <item name="actionBarTheme">@style/AppTheme.Actionbar</item>
    </style>

    <style name="AppTheme.Actionbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme" />

    <style name="AppTheme.PopupOverlay" parent="AppTheme" />


    <style name="ThemeToolbar" parent="AppTheme">
        <!-- navigation icon color -->
        <item name="colorControlNormal">#313E5E</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="TagAppearance">
        <item name="chipBackgroundColor">#F1F2FA</item>
        <item name="android:textColor">#5F70C0</item>

        <item name="android:textSize">14dp</item>
        <item name="chipMinHeight">20dp</item>
        <item name="chipCornerRadius">3dp</item>

        <item name="textStartPadding">1dp</item>
        <item name="textEndPadding">1dp</item>
    </style>

    <style name="TagAppearance.Small" parent="TagAppearance">
        <item name="chipMinHeight">18dp</item>
        <item name="android:textSize">12dp</item>
    </style>


    <!--    <style name="menu_labels_style">-->
<!--        <item name="android:textColor">#FFFFFF</item>-->
<!--        <item name="android:background">@drawable/fab_actiontext_background</item>-->
<!--    </style>-->

    <!--ShapeableImageView åœ† -->
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
